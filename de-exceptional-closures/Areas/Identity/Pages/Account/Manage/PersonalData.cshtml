@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Delete account";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">

            <h2>@ViewData["Title"]</h2>
            <p class="govuk-body">Your account contains personal data that you have given us. This page allows you to delete that data.</p>
            <p class="govuk-body">
                <a id="delete" asp-page="DeletePersonalData" class="govuk-button govuk-button--warning">Delete</a>
            </p>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
