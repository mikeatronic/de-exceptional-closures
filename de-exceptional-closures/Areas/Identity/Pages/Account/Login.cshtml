@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}



<div class="govuk-width-container">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-full">
                <h1>@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="govuk-input" />
                            <span asp-validation-for="Input.Email" class="govuk-error-message"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="govuk-input" />
                            <span asp-validation-for="Input.Password" class="govuk-error-message"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="govuk-button" data-module="govuk-button">Log in</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="govuk-link">Forgot your password?</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="govuk-link">Register as a new user</a>
                            </p>
                        </div>
                    </form>
                </section>
          
        </div>
    </div>    
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
