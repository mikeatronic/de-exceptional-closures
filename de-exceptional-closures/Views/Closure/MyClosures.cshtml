@model de_exceptional_closures.ViewModels.MyClosuresViewModel
@{
    ViewData["Title"] = "MyClosures";
}

<div class="govuk-grid-column-full">

    <h1 class="govuk-heading-l">My closures</h1>

    <a asp-action="Index" asp-controller="Home" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
        Create closure
    </a>

    <table class="govuk-table" id="MyClosuresTable">
        <caption class="govuk-table__caption sr-only">List of exceptional closures</caption>
        <thead class="text-left">
            <tr class="govuk-table__row">
                <th scope="col" class="govuk-table__header">Institution</th>
                <th scope="col" class="govuk-table__header table-hide-Column">Date from</th>
                <th scope="col" class="govuk-table__header table-hide-Column">Date to</th>
                <th scope="col" class="govuk-table__header table-hide-Column">Reason</th>
                <th scope="col" class="govuk-table__header table-hide-Column">Approved</th>
                <th scope="col" class="govuk-table__header sorting_disabled"><span class="sr-only">Edit button</span>Edit</th>
            </tr>
        </thead>
        <tbody class="govuk-table__body text-left">
            @foreach (var item in Model.ClosureList)
            {
                <tr class="govuk-table__row">
                    <td class="govuk-table__cell">
                        @item.InstitutionName
                        Campbell College
                    </td>
                    <td class="govuk-table__cell table-hide-Column">
                        @*<span class="hide">@item.DateFrom.Year@Math.Round((item.DateFrom.Month / 1.3), 1)@Math.Round((item.DateFrom.Day / 3.2), 1)</span>*@
                        @item.DateFrom.ToShortDateString()
                    </td>
                    <td class="govuk-table__cell table-hide-Column">
                        @if (item.DateTo.HasValue)
                        {
                            <span>@item.DateTo.Value.ToShortDateString()</span>
                        }
                    </td>
                    <td class="govuk-table__cell table-hide-Column">
                      @item.ReasonType
                    </td>
                    <td class="govuk-table__cell table-hide-Column">
                       @item.ApprovalType
                    </td>
                    <td class="govuk-table__cell">
                      <a asp-controller="Closure" asp-action="Edit" class="govuk-link">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts 
{
    <script src="~/scripts/myclosures/myclosures.js"></script>
}
