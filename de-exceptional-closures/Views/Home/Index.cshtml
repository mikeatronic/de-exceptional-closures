@model de_exceptional_closures.ViewModels.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<form asp-action="Index" asp-controller="Home">
    @Html.AntiForgeryToken()
    <div class="govuk-width-container">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-full">

                <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                    <div class="govuk-notification-banner__header">
                        <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                            Important
                        </h2>
                    </div>
                    <div class="govuk-notification-banner__content">
                        <p class="govuk-notification-banner__heading">
                            Data protection statement
                        </p>
                        <p>
                            The Department of Education is obliged to comply with the UK General Data Protection Regulation and the Data Protection Act 2018 when processing personal information.
                        </p>
                        <p>
                            The information provided by you will be processed by Department of Education on the lawful basis that it forms part of Department of Education's public task to do so.
                        </p>
                    </div>
                </div>


                <partial name="../Components/_errorSummary.cshtml" />

                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset" aria-describedby="changed-name-hint">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                            <h1 class="govuk-fieldset__heading">@Model.TitleTagName</h1>
                        </legend>

                        <span asp-validation-for="IsPreApproved" class="govuk-error-message">

                        </span>
                        <div id="changed-name-hint" class="govuk-hint"></div>
                        <div class="govuk-radios govuk-radios--inline">
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="IsPreApproved" name="IsPreApproved" type="radio" value="true" data-val="true" data-val-required="IsPreApproved">
                                <label class="govuk-label govuk-radios__label" for="IsPreApproved">Yes</label>
                            </div>
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" id="IsPreApproved-2" name="IsPreApproved" type="radio" value="false">
                                <label class="govuk-label govuk-radios__label" for="IsPreApproved-2">No</label>
                            </div>
                        </div>

                    </fieldset>
                </div>
                <input type="submit" value="Continue" name="save" class="govuk-button" data-module="govuk-button" />
            </div>
        </div>
    </div>
</form>