<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="no index, no follow" />
    <meta name="description" content="Exceptional closures for Schools in Northern Ireland. Department of Education NI." />
    <meta name="theme-color" content="#0a78cd" />
    <link rel="apple-touch-icon" href="~/images/ni-direct-apple-touch.png" />
    <title>@(Model.TitleTagName != null ? Model.TitleTagName + " - " : string.Empty) Exceptional Closures</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/DataTables/datatables.min.css" rel="stylesheet" />
    <link href="~/sass/site.css" rel="stylesheet" />
    <link href="~/css/fontawesome.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" href="~/images/favicon.ico" type="image/x-icon" />
    <link rel="icon" sizes="16x16 32x32 48x48" href="~/images/favicon.ico" type="image/x-icon">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
<body>

    <script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>
    <a href="#main-content" class="govuk-skip-link">Skip to main content</a>
    <partial name="../Components/_cookieConsentBanner.cshtml" />
    <partial name="../Components/_header.cshtml" />

    <div class="govuk-width-container app-width-container">
        <partial name="../Components/_alpha.cshtml" />
        <div class="govuk__container">
            <main role="main" class="govuk-main-wrapper" id="main-content">
                <div class="govuk-grid-row">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    <partial name="../Components/_footer.cshtml" />
    <script src="~/lib/DataTables/datatables.min.js"></script>
    <partial name="../Shared/_ValidationScriptsPartial.cshtml" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    <partial name="../Shared/_initializeGOVUKFrontend.cshtml" />
    <script src="~/Scripts/PreApproved.js"></script>
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
</body>
</html>